#include "imx6dl-wisehmi.dts"

&chosen{
       bootargs = "ubi.mtd=3 root=ubi0:rootfs rootfstype=ubifs rootwait rw console=ttymxc3,115200n8 lpj=7905280 mtdparts=gpmi-nand:64m(boot),16m(kernel),16m(dtb),-(rootfs)";
};

&lcd {
	default_ifmt = "BGR24";
	native-mode = <&HSD070IDW1>;
 };

&mxcfb1 {
	interface_pix_fmt = "BGR24";
}; 

&displaysw{
	display-sw-gpio = <&gpio1 20 GPIO_ACTIVE_LOW>;
};

&pwm3 {
	status = "okay";
};

&wisehmi_bl {
	default-brightness-level = <60>; 
	status = "okay";
};

&i2c3 {
	status = "okay";
};

&video0{
	status = "okay";
};

&usbh1 {
	status = "okay";
};

&gpmi {
	status = "okay";
};
