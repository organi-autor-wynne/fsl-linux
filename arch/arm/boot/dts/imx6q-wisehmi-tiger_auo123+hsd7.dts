#include "imx6q-wisehmi.dts"

&ldb {
	split-mode;

	lvds-channel@0 {
		crtc = "ipu2-di0";
		
		native-mode = <&AUO_C123HAN01_1>;
	};

	lvds-channel@1 {
		crtc = "ipu2-di0";

		native-mode = <&AUO_C123HAN01_1>;
	};
};

&mxcfb1 {
	disp_dev = "ldb";
	interface_pix_fmt = "RGB24";
};

&lcd {
	default_ifmt = "BGR24";
	native-mode = <&HSD070IDW1>;
	status = "okay";
};

&mxcfb2 {
	disp_dev = "lcd";
	interface_pix_fmt = "BGR24";
	status = "okay";
};

&displaysw{
	display-sw-gpio = <&gpio1 20 GPIO_ACTIVE_LOW>;
};

&pwm3 {
	status = "okay";
};

&wisehmi_bl {
	default-brightness-level = <60>; 
	status = "okay";
};

&i2c3 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&video0{
	status = "okay";
};

&usbh1 {
	status = "okay";
};

&ssi1 {
	status = "okay";
};

&audmux {
	status = "okay";
};